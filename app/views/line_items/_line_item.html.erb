<% if line_item  %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td><%= button_to 'Delete', line_item_path(line_item), method: :delete %></td>
  <td>
    <% if line_item.quantity > 1 %>
      <%= button_to '-', { controller: "line_items", action: "update", id: line_item.id, line_item: {quantity: (line_item.quantity - 1) }}, method: :put %>
    <% else %>
      <%= button_to '-', line_item_path(line_item), method: :delete %>
    <% end %>
  </td>
  <td><%= button_to '+', { controller: "line_items", action: "update", id: line_item.id,  line_item: { quantity: (line_item.quantity + 1) }}, method: :put%></td>
</tr>
